---
import BaseLayout from "@/layout/base.astro"
import Content from "@/ui/Content.astro"
import Player from "@/ui/Player.astro"
import Sidebar from "@/ui/Sidebar.astro"
import Titlebar from "@/ui/Titlebar.astro"

const title = "SpotiManz"
---

<style>
    .container {
      --player-height: 125px;
  
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      background: var(--dark-bgcolor);
      padding: 1rem;
    }
  
    .titlebar {
      height: 20px;
      padding-bottom: 10px;
    }
  
    .player {
      background: var(--dark-bgcolor);
      height: var(--player-height);
      width: 100%;
      display: grid;
      position: absolute;
      left: 0;
      bottom: 0;
      padding: 1rem;
      z-index: 25;
      box-sizing: border-box;
    }
  
    .content-container {
      display: grid;
      grid-template-columns: 300px 1fr;
      height: calc(100% - var(--player-height));
    }
  
    .content {
      padding: 0;
      padding-left: 1rem;
    }
  </style>

<BaseLayout title={ title }>

    <div class="container">
        <div class="titlebar">
            <Titlebar />  
        </div>
        <div class="sidebar">
            <Sidebar />
        </div>
        <div class="content">
            <Content />
        </div>
        <div class="player">
            <Player />
        </div>
    </div>

</BaseLayout>

